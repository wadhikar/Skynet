<% include ../partials/header %>
<div style="...">
    <h1>Edit <%= group.name%> Group</h1>
    <form action="/groups/<%=group._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="groupName">Group Name:
                <input type = 'text' name="groupName" placeholder="Group Name" value="<%= group.name%>"required>
            </label>
        </div>
        <div class="form-group">
            <!--            TODO:Possibly add method to make this dynamic-->
            <h2>Add Members</h2>
            <label for="member">
                1:
                <input type="text" id="member1" name="member" placeholder="Member">
            </label><br>
            <label for="member">
                2:
                <input type="text" id="member1" name="member" placeholder="Member">
            </label><br>
            <label for="member">
                3:
                <input type="text" id="member1" name="member" placeholder="Member">
            </label><br>
            <label for="member">
                4:
                <input type="text" id="member1" name="member" placeholder="Member">
            </label><br>

            <label for="member5">
                5:
                <input type="text" id="member5" name="member5" placeholder="Member">
            </label>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <table>
        <th scope="col">Name</th>
        <tbody>
        <% members.forEach((member) => { %>
            <tr>
                <th scope="row"><%= member.userame %></th>
                <td><%= member.username %></td>
                <td>
                    <form id="delete-form" action="/groups/<%= group._id %>/delete/<%= member._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-lg btn-danger btn-block">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>

</div>

